{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "<", "close": ">" }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["\"", "\""],
    ["<", ">"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*:\\s*(//.*)?$",
    "decreaseIndentPattern": "^\\s*$"
  },
  "folding": {
    "offSide": true
  }
}
